<Grid
    x:Class="DevExpress.AvaloniaXpfDemo.DemoShell.DemoShellWindowContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DevExpress.AvaloniaXpfDemo.DemoShell"
    x:Name="owner">

    <local:DemoShellModulePresenter x:Name="PART_CurentModulePresenter" ShowDescription="{Binding ElementName=owner, Path=ShowDescription}" />
    <local:DemoShellModulePresenter
        x:Name="PART_NextModulePresenter"
        Visibility="Collapsed"
        ShowDescription="{Binding ElementName=owner, Path=ShowDescription}" />

</Grid>
